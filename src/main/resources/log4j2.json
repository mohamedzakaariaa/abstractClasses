{
    "configuration": {
        "status": "warn",
        "name": "Default",
        "ThresholdFilter": {
            "level": "INFO"
        },

        "appenders": {
            "Console": {
                "name": "STDOUT",
                "target": "SYSTEM_OUT",
                "PatternLayout": {
                    "pattern": "%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"
                }
            }
        },

        "loggers": {
            "logger": [
                {
                    "name": "org.testng",
                    "level": "warn",
                    "additivity": false,
                    "AppenderRef": { "ref": "STDOUT" }
                },
                {
                    "name": "org.apache.logging.log4j",
                    "level": "warn",
                    "additivity": false,
                    "AppenderRef": { "ref": "STDOUT" }
                }
            ],

            "root": {

                "level": "info",
                "AppenderRef": { "ref": "STDOUT" }
            }
        }
    }
}
